                            많은 관심과 참여 감사합니다.
                        </span>
                    </div>
                }
            </div>

            @if (Bcategory == "events" && key != "24")
            {
                <div class="reply">
                    <h2>
                        @{
                            int rcnt = 0;
                            var cnt = aaaaa as List<review>;
                            if (cnt[0].CU_SEQ != 0)
                            {
                                rcnt = cnt.Count;
                            }
                        }
                        댓글 @(rcnt > 0 ? rcnt.ToString() : "없음")
                    </h2>

                    @if (type != "event" && key != "28")
                    {
                        <div class="comment">
                            @if (type == "event" && key == "28")
                            {
                                <label>
                                    <input type="radio" name="cat[]" value="01" checked="checked" />
