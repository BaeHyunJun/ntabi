@{
    Layout = "~/Views/Shared/_Layout.cshtml";
}

<style>
    div#container > article > section.recommend {
        padding-top: 20px;
    }

    section.recommend > ul {
        padding: 0;
        margin: 0;
        margin-top: 30px;
        list-style: none;
        font-size: 0;
        overflow: hidden;
    }

        section.recommend > ul > li {
            float: left;
            text-align: center;
            font-size: 15px;
            padding-top: 5px;
            margin-left: 12px;
            width: 392px;
            margin-bottom: 20px;
            margin-top: 5px;
            border: 2px solid #efefef;
        }

            section.recommend > ul > li:hover {
                border-color: #2ca0d1;
            }

            section.recommend > ul > li:first-child,
            section.recommend > ul > li:nth-child(4) {
                margin-left: 0;
            }

            section.recommend > ul > li > a {
                display: block;
            }

                section.recommend > ul > li > a > img {
                    width: 100%;
                    padding: 5px;
                    margin-top: -5px;
                }

                section.recommend > ul > li > a > div {
                    padding: 6px 10px 10px 10px;
                    position: relative;
                    text-align: left;
                }

                    section.recommend > ul > li > a > div h4 {
                        display: inherit;
                        font-size: 16px;
                        overflow: hidden;
                        white-space: nowrap;
                        text-overflow: ellipsis;
                    }

                section.recommend > ul > li > a div.category {
                    display: block;
                    position: absolute;
                    left: 8px;
                    top: -28px;
                }

                    section.recommend > ul > li > a div.category > span {
                        padding: 5px 10px;
                        color: white;
                        font-size: 12px;
                    }

                        section.recommend > ul > li > a div.category > span.ryokan {
                            background-color: red;
                        }

                        section.recommend > ul > li > a div.category > span.theme {
                            background-color: blue;
                        }

                        section.recommend > ul > li > a div.category > span.local {
                            background-color: orange;
                        }

                section.recommend > ul > li > a > div p.remark {
                    margin: 0;
                    margin-top: 3px;
                    font-size: 14px;
                    overflow: hidden;
                    white-space: nowrap;
                    text-overflow: ellipsis;
                }

                section.recommend > ul > li > a div.category > span.box {
                    adisplay: inline-block;
                    padding: 2px 5px;
                    color: white;
                    margin: 2px;
                }

                    section.recommend > ul > li > a div.category > span.box.trf {
                        background-color: #22be4e;
                        margin-left: 0;
                    }

                    section.recommend > ul > li > a div.category > span.box.sCity {
                        background-color: #1f26b6;
                    }
</style>

<section class="recommend">
    <h3 class="sr-only sr-only-focusable">엔타비에서 추천하는 여행지</h3>

    <img src="~/Content/Images/AirFree/topbanner_afp.jpg" alt="에어 프리팩" />

    <ul>


        @try
        {
            string date = "",
                    pdtKey = "",
                    pdtCode = "",
                    pdtTitle = "",
                    pdtContent = "",
                    pdtFeature = "",
                    pdtPrice = "",
                    pdtDasys = "",
                    pdtOptions = "",
                    pdtTraff = "",
                    pdtSCity = "",
                    pdtSTime = "",
                    pdtECity = "",
                    pdtETime = "",
                    pdtDasysTxt = "";

            foreach (object item in Model)
            {
                pdtKey = "";
                pdtCode = "";
                pdtTitle = "";
                pdtContent = "";
                pdtFeature = "";
                pdtPrice = "";
                pdtDasys = "";
                pdtOptions = "";
                pdtTraff = "";
                pdtSCity = "";
                pdtSTime = "";
                pdtECity = "";
                pdtETime = "";
                pdtDasysTxt = "";
                date = "";

                try { pdtKey = item.GetType().GetProperties()[2].GetValue(item, null).ToString(); } catch { }
                try
                {
                    pdtCode = item.GetType().GetProperties()[0].GetValue(item, null).ToString();
                    pdtCode += item.GetType().GetProperties()[1].GetValue(item, null).ToString();
                    pdtCode += item.GetType().GetProperties()[2].GetValue(item, null).ToString();
                    pdtCode += item.GetType().GetProperties()[3].GetValue(item, null).ToString();
                    pdtCode += item.GetType().GetProperties()[4].GetValue(item, null).ToString();
                }
                catch { }
                try { pdtTitle = item.GetType().GetProperties()[5].GetValue(item, null).ToString(); } catch { }
                try { pdtContent = item.GetType().GetProperties()[6].GetValue(item, null).ToString(); } catch { }
                try { pdtDasys = item.GetType().GetProperties()[7].GetValue(item, null).ToString(); } catch { }
                try { pdtOptions = item.GetType().GetProperties()[8].GetValue(item, null).ToString(); } catch { }
                try { pdtTraff = item.GetType().GetProperties()[9].GetValue(item, null).ToString(); } catch { }
                try { pdtSCity = item.GetType().GetProperties()[10].GetValue(item, null).ToString(); } catch { }
                try { pdtSTime = item.GetType().GetProperties()[11].GetValue(item, null).ToString(); } catch { }
                try { pdtECity = item.GetType().GetProperties()[12].GetValue(item, null).ToString(); } catch { }
                try { pdtETime = item.GetType().GetProperties()[13].GetValue(item, null).ToString(); } catch { }
                try { pdtFeature = item.GetType().GetProperties()[14].GetValue(item, null).ToString(); } catch { }
                try { pdtPrice = item.GetType().GetProperties()[15].GetValue(item, null).ToString(); } catch { }
                try { date = item.GetType().GetProperties()[16].GetValue(item, null).ToString(); } catch { }

                if (pdtPrice == "0")
                {
                    continue;
                }

                switch (pdtDasys.Substring(2, 2))
                {
                    case "01":
                        pdtDasysTxt = "당일치기";
                        break;
                    case "02":
                        pdtDasysTxt = "1박 2일";
                        break;
                    case "03":
                        pdtDasysTxt = "2박 3일";
                        break;
                    case "04":
                        pdtDasysTxt = "3박 4일";
                        break;
                    case "05":
                        pdtDasysTxt = "4박 5일";
                        break;
                    case "06":
                        pdtDasysTxt = "5박 6일";
                        break;
                    case "07":
                        pdtDasysTxt = "6박 7일";
                        break;
                    case "08":
                        pdtDasysTxt = "7박 8일";
                        break;
                    case "09":
                        pdtDasysTxt = "8박 9일";
                        break;
                    case "10":
                        pdtDasysTxt = "9박 10일";
                        break;
                }

                int inCnt = Convert.ToInt32(pdtDasys.Substring(2, 2)) - (Convert.ToInt32(pdtDasys.Substring(0, 2)) + 1);

                switch (pdtOptions)
                {
                    case "best":
                        pdtOptions = "베스트 상품";
                        break;
                    case "vari":
                        pdtOptions = "버라이어티 팩";
                        break;
                    case "airf":
                        pdtOptions = "에어 프리 팩";
                        break;
                    default:
                        pdtOptions = "";
                        break;
                }

                <li>
                    <a href="/Products/Views?C=@pdtCode&K=@pdtKey">
                        <img src="@pdtFeature" alt="@pdtTitle" />
                        <div>
                            <div class="category">
                                <span class="box trf">@pdtTraff</span><span class="box sCity">출발지 : @pdtSCity</span>
                            </div>
                            <h4 class="title">@pdtTitle</h4>
                            <p class="remark">
                                @pdtContent
                            </p>
                        </div>
                    </a>
                </li>
            }
        }
        catch { }
    </ul>
</section>