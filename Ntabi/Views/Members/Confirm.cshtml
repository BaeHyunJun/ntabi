@{
    Layout = "~/Views/Shared/_Layout.cshtml";
}


<style>
    div#container > article > section.confirm {
        padding-top: 10px;
    }

    section.confirm > h3 {
        font-size: 14px;
        color: #2a2a2a;
    }

    section.confirm ul {
        padding: 0;
        margin: 0;
        list-style: none;
        font-size: 0;
        overflow: hidden;
    }

        section.confirm ul.lists {
            text-align: center;
        }

            section.confirm ul.lists > li {
                margin: 0;
                padding: 0 19px;
                position: relative;
                display: inline-block;
                font-size: 16px;
                color: #9f9f9f;
            }

                section.confirm ul.lists > li.on {
                    color: #2a2a2a;
                }

                section.confirm ul.lists > li:before {
                    content: '';
                    border-right: 1px solid #777;
                    display: block;
                    position: absolute;
                    top: 4px;
                    bottom: 2px;
                    left: 0;
                }

                section.confirm ul.lists > li:first-child:before {
                    display: none;
                }

    section.confirm > div {
        text-align: center;
    }

        section.confirm > div > p {
            margin-top: 140px;
            text-align: center;
            font-size: 20px;
            color: #212121;
        }

            section.confirm > div > p > span {
                display: block;
                margin: 20px 0;
                font-size: 15px;
            }

        section.confirm > div > a {
            padding: 0;
            width: 170px;
            font-size: 15px;
            line-height: 30px;
            background-color: #dfeccd !important;
        }

            section.confirm > div > a.main {
                background-color: #f1f1f1 !important;
            }
</style>

<section class="confirm">
    <h3>회원가입</h3>

    <ul class="lists">
        <li>
            이메일인증
        </li>
        <li>
            정보입력 / 약관동의
        </li>
        <li class="on">
            가입완료
        </li>
    </ul>

    <div>
        <h4 class="sr-only sr-only-focusable">가입완료</h4>

        <p>
            "@ViewBag.ID" 님
            <span>
                Ntabi의 가족이 되신걸 환영합니다.^^
            </span>
        </p>

        <a class="btn loginBtn" href="#">
            로그인
        </a>
        <a class="btn main" href="/">
            메인으로
        </a>

    </div>
</section>