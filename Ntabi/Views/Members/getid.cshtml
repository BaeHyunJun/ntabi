<style>
    * {
        font-family: 'Noto Sans KR', sans-serif;
    }

    a, a:hover, a:focus, a:active {
        color: black;
        background-color: transparent !important;
        text-decoration: none;
        cursor: pointer;
    }

    h1, h2, h3, h4, h5, h6 {
        font-weight: 600;
        margin: 0;
        padding: 0;
        display: inline;
        color: black;
    }

    h3 {
        font-size: 20px;
        font-weight: 500;
        letter-spacing: 1px;
        color: #555555;
    }

    h4 {
        font-size: 17px;
    }

    ul {
        padding: 0;
        list-style: none;
    }

    html, body, div#container {
        width: 100%;
        height: 100%;
        min-width: 1200px;
    }


    div#container {
        max-width: 1200px;
        margin: 0 auto;
    }

        div#container section.findnotice {
            margin-top: 80px;
            margin-bottom: 120px;
            text-align: center;
        }

            div#container section.findnotice p.notice {
                margin: 0;
                margin-bottom: 50px;
                font-size: 18px;
                color: #555;
            }

                div#container section.findnotice p.notice span {
                    font-size: 22px;
                    letter-spacing: 1px;
                    color: #222;
                }

            div#container section.findnotice div.btn {
                width: 30%;
                margin: 0 auto;
            }

                div#container section.findnotice div.btn:after {
                    content: "";
                    display: block;
                    clear: both;
                }

                div#container section.findnotice div.btn p {
                    width: 48%;
                    margin: 0;
                    background-color: #e0e0e0;
                }

                    div#container section.findnotice div.btn p.login {
                        float: left;
                    }

                    div#container section.findnotice div.btn p.findpassword {
                        float: right;
                    }

                    div#container section.findnotice div.btn p a {
                        display: block;
                        width: 100%;
                        font-size: 13px;
                        line-height: 28px;
                    }
</style>

@{
    string id = "";

    foreach(object item in Model)
    {
        try { id = string.IsNullOrEmpty(id) ? item.GetType().GetProperties()[0].GetValue(item, null).ToString() : ", " + item.GetType().GetProperties()[0].GetValue(item, null).ToString(); }
        catch { }
    }
}

<div id="container" style="padding-top: 50px;">
    <section class="findnotice">
        <p class="notice">
            고객님의 아이디는 <span>" @id "</span> 입니다.
        </p>
        <div class="btn">
            <p class="login"><a href="/">홈</a></p>
            <p class="findpassword"><a href="/Members/getidpwd">비밀번호 찾기</a></p>
        </div> <!--.btn-->
    </section> <!--.findnotice-->
</div> <!--#container-->