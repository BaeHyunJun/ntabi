@using Ntabi.Models;
@using System.Text.RegularExpressions;
@{
    Layout = "~/Views/Shared/_Layout.cshtml";

    var key = Request["k"];

    string onClass = "class=on";
}

<style>
    div.pro_top ul.listsHeader {
        text-align: center;
    }

        div.pro_top ul.listsHeader > li {
            margin: 0;
            padding: 0 19px;
            position: relative;
            display: inline-block;
        }

            div.pro_top ul.listsHeader > li:before {
                content: '';
                border-right: 1px solid #777;
                display: block;
                position: absolute;
                top: 4px;
                bottom: 2px;
                left: 0;
            }

            div.pro_top ul.listsHeader > li:first-child:before {
                display: none;
            }

            div.pro_top ul.listsHeader > li > a {
                color: #9f9f9f;
                font-size: 16px;
            }

            div.pro_top ul.listsHeader > li.on > a {
                color: #101010;
            }

    div#wrap article#container div.pro_top {
        height: 80px;
        background-color: #ededed;
    }

        div#wrap article#container div.pro_top p {
            width: 1050px;
            margin: 0 auto;
            font-size: 24px;
            line-height: 80px;
        }

    div#wrap article#container ul.set {
        padding: 0;
        list-style: none;
        font-size: 0;
        overflow: hidden;
        width: 50%;
        margin: 50px auto;
    }

        div#wrap article#container ul.set > li {
            float: left;
            font-size: 14px;
            text-align: center;
            border: 1px solid #ddd;
            width: 25%;
            padding: 18px 0 5px;
            line-height: 35px;
            border-left: 0;
        }

            div#wrap article#container ul.set > li:first-child {
                border-left: 1px solid #ddd;
            }

            div#wrap article#container ul.set > li a.in {
                color: #a0ce54;
            }

            div#wrap article#container ul.set > li > a > img {
                width: 100%;
            }

    section.board {
        width: 1030px;
        margin: 0 auto 60px;
        border: 1px solid #ddd;
        padding: 20px;
        margin-top: 20px;
    }

        section.board > h4 {
            border-bottom: 1px solid #ddd;
            margin: -20px;
            padding: 20px 20px;
            font-size: 16px;
            background-color: #a0ce54;
            color: white;
            font-weight: normal;
            display: block;
        }

            section.board > h4 > span {
                float: right;
            }

        section.board > span {
            line-height: 35px;
            display: block;
            text-align: right;
            margin-top: 20px;
        }

        section.board div.cont {
            border: 1px solid #ddd;
            padding: 20px;
        }

            section.board div.cont img {
                max-width: 946px;
            }

        section.board div.reply {
            max-width: 980px;
            margin: 20px auto;
        }

            section.board div.reply > h2 {
                font-size: 15px;
                font-weight: normal;
                margin-bottom: 20px;
            }

            section.board div.reply div.comment {
                background-color: #eee;
                padding: 20px;
            }

                section.board div.reply div.comment textarea.rContent {
                    width: 830px;
                    padding: 10px;
                    line-height: 25px;
                    height: 72px;
                }

                section.board div.reply div.comment a.reply_add_btn {
                    width: 105px;
                    height: 72px;
                    display: inline-block;
                    float: right;
                    line-height: 72px;
                    text-align: center;
                    background-color: #a0ce54 !important;
                    color: white;
                    font-size: 16px;
                    border-radius: 5px;
                    color: white;
                }


        section.board.event {
            max-width: none !important;
            width: 100%;
            padding: 0;
            margin: 0 !important;
            border: none;
        }

            section.board.event > h4,
            section.board.event > span {
                display: none;
            }

            section.board.event > div.cont {
                padding: 0;
                margin: 0;
            }

                section.board.event > div.cont img {
                    max-width: none;
                }
</style>

