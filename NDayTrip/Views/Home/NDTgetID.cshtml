@{
    Layout = "~/Views/Shared/_Layout.cshtml";
}

<style>
    section.content {
        padding: 52px 0;
        margin: 0 -15px;
    }

    section > article.getID {
        padding: 20px;
    }

        section > article.getID > input,
        section > article.getID > button,
        section > article.getID > a {
            width: 100%;
            height: 45px;
            padding: 5px 10px;
            margin-bottom: 10px;
            font-size: 16px;
            line-height: 45px;
            border: 1px solid #ddd;
        }

        section > article.getID > input,
        section > article.getID > button,
        section > article.getID > a {
            width: 100%;
            height: 45px;
            padding: 5px 10px;
            margin-bottom: 10px;
            font-size: 16px;
            line-height: 45px;
            border: 1px solid #ddd;
            -webkit-appearance: none;
            -webkit-width: 100%;
        }

            section > article.getID > button.getIDBtn {
                position: fixed;
                left: 0;
                right: 0;
                bottom: 0;
                margin: 10px 0 0;
                color: white;
                background: #a0ce54;
                border: #a0ce54;
                font-weight: bold;
                padding: 0;
                max-width: 450px;
                margin: 0 auto;
            }

        section > article.getID > a {
            margin: 10px 0 0;
            display: block;
            text-align: center;
            color: black;
            border: 2px solid #a0ce54;
            font-weight: bold;
            padding: 0;
        }

        section > article.getID > div {
            margin: 10px 0;
            overflow: hidden;
        }

            section > article.getID > div > label {
                margin: 0;
                color: #777;
            }

                section > article.getID > div > label > input {
                    margin: 0;
                    margin-right: 5px;
                }

                section > article.getID > div > label > a,
                section > article.getID > div > label > span {
                    color: #777;
                }

                section > article.getID > div > label > span {
                    margin: 0 10px;
                }

    section > article.viewID {
        display: none;
        position: absolute;
        left: 0;
        top: 0;
        right: 0;
        bottom: 0;
        background-color: rgba(0,0,0,.5);
        z-index: 9999;
    }

        section > article.viewID > div.userID {
            width: 200px;
            height: 50px;
            line-height: 30px;
            padding: 10px 20px;
            border: 2px solid white;
            color: white;
            position: absolute;
            left: 50%;
            margin-left: -100px;
            top: 50%;
            margin-top: -25px;
            text-align: center;
        }
</style>


<section class="content">
    <article class="getID">
        <input type="text" name="name" placeholder="이름" />
        <input type="date" name="birth" placeholder="생년 월일" value="1980-12-01" />
        <input type="text" name="email" placeholder="이메일" />

        <button class="getIDBtn">아이디 찾기</button>
    </article>

    <article class="viewID">
        <div class="userID">
            testhj20
        </div>
    </article>
</section>

<script src="~/Scripts/jquery.cookie.js"></script>

<script>
    $(document).ready(function () {
        $("article.viewID").on("click", function () {
            $(this).hide();
        });

        $("article.getID button.getIDBtn").on("click", function (e) {
            e.stopPropagation();
            e.preventDefault();

            var name = $("input[name='name']");
            var birth = $("input[name='birth']");
            var email = $("input[name='email']");

            if (name.val() == "") {
                alert("이름을 입력해주세요.");
                name.focus();
                return;
            }

            if (birth.val() == "") {
                alert("생년월일을 입력해주세요.");
                birth.focus();
                return;
            }

            if (email.val() == "") {
                alert("이메일을 입력해주세요.");
                email.focus();
                return;
            }

            var url = "/Home/getID";
            var data = { name: name.val(), birth: birth.val(), email: email.val() };

            var regId = /^[_A-Za-z0-9]{5,12}$/;

            $.ajax({
                type: "POST",
                url: url,
                data: data,
                success: function (rData) {
                    if (!regId.test(rData)) {
                        alert(rData);
                    } else {
                        $("article.viewID").show();
                        $("div.userID").text(rData);
                    }
                }
                , beforeSend: function () {
                    $('#loading').show();
                }
                , complete: function () {
                    $('#loading').hide();
                }
            });
        });
    });
</script>