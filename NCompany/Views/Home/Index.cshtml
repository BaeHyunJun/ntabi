@using NCompany.Models

@{
    Layout = null;
    ViewBag.Title = "Company \"N\"";

    var user = Session["user"] as User;
    
    if (user != null)
    {
        <script>
            location.href = "/Products";
        </script>
    }
}

<!DOCTYPE html>

<html>
<head>
    <meta charset="utf-8" />
    <meta name="viewport" content="width=device-width, initial-scale=1.0">

    <title>@ViewBag.Title</title>

    @Styles.Render("~/Content/css")
</head>
<body>

    <div class="container body-content">
        <h2>@ViewBag.Title Log in.</h2>
        <div class="row">
            <div class="col-md-8">
                <section id="loginForm">
                    @using (Html.BeginForm("Index", "Home", new { ReturnUrl = ViewBag.ReturnUrl }, FormMethod.Post, new { @class = "form-horizontal", role = "form" }))
                    {
                        @Html.AntiForgeryToken()
                        <h4>"N" Company 관리자 페이지 입니다. 관리자 아이디로 로그인 해주세요.</h4>
                        <hr />
                        <div class="form-group">
                            @Html.Label("loginID", "아이디", new { @class = "col-md-2 control-label" })
                            <div class="col-md-10">
                                @Html.TextBox("loginID", null, new { @class = "form-control" })
                                @Html.ValidationMessage("아이디", "", new { @class = "text-danger" })
                            </div>
                        </div>
                        
                        <div class="form-group">
                            @Html.Label("loginPWD", "비밀번호", new { @class = "col-md-2 control-label" })
                            <div class="col-md-10">
                                @Html.Password("loginPWD", null, new { @class = "form-control" })
                                @Html.ValidationMessage("비밀번호", "", new { @class = "text-danger" })
                            </div>
                        </div>
                        
                        <div class="form-group">
                            <div class="col-md-offset-2 col-md-10">
                                <input type="submit" value="로그 인" class="btn btn-default" />
                            </div>
                        </div>
                    }
                </section>
            </div>
        </div>

        @section Scripts {
            @Scripts.Render("~/bundles/jqueryval")
        }
    </div>

</body>
</html>
