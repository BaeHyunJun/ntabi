        $('div#datepicker').fullCalendar({
            header: {
                left: "",
                center: "title",
                right: "today prev, next"
            },
            locale: 'ko',
            buttonIcons: false,
            navLinks: true,
            editable: true,
            eventLimit: true,
            eventStartEditable: false,
            events: function (start, end, timezone, callback) {
                var data1 = "ALL",
                    data2 = $("select[name=area]").val();

                var datas = { type: data1, area: data2 };

                $.ajax({
                    type: "POST",
                    url: "/Car/JSON_getSchedule",
                    data: datas,
                    success: function (data) {
                        var events = [];
                        var title = "";

                        //console.log(data);

                        for(i in data)
                        {
                            title = data[i].title;

                            if (title.length >= 8)
                            {
                                title = data[i].title.substr(0, 7) + "..";
                            }

                            events.push({
                                title: title + " (" + data[i].cnt + " 명)",
                                start: data[i].date,
                                guide: data[i].emp,
                                car: data[i].car,
                                type: getCarType(data[i].type),
                                color: getColor(data[i].type),
                                driver: data[i].driver,
                                cnt: data[i].cnt,
                                note: data[i].note,
                                course: data[i].title,
                                seq: data[i].seq,
                                area: data[i].area,
                                sub: data[i].sub,
                            });
                        }

                        callback(events);
                    }
                    , beforeSend: function () {
                        $('#loading').show();
                    }
                    , complete: function () {
                        $('#loading').hide();
                    }
                });
            },
            eventMouseover: function (data, event, view) {
                tooltip = '<div class="tooltiptopicevent">' +
