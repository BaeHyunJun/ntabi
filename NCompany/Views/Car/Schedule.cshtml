        function getCarType(txt) {
            var carType = "";

            switch (txt) {
                case "LBS":
                    carType = "대형 버스";
                    break;
                case "MBS":
                    carType = "중형 버스";
                    break;
                case "14 ":
                    carType = "14인 승합차";
                    break;
                case "10 ":
                    carType = "10인 승합차";
                    break;
                case "6  ":
                    carType = "6인 승합차";
                    break;
            }

            return carType;
        }

        function getColor(txt)
        {
            var color = "red";

            switch(txt)
            {
                case "LBS":
                    color = "#7030a0";
                    break;
                case "MBS":
                    color = "#ff66ff";
                    break;
                case "SBS":
                    color = "#0070C0";
                    break;
                case "14 ":
                    color = "#92d050";
                    break;
                case "10 ":
                    color = "#ffc000";
                    break;
                case "6  ":
                    color = "#c5d9f1";
                    break;
            }

            return color;
        }
    });
